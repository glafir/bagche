- model_class = Order_status
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize

%table.table.table-striped.table-hover.table-condensed
  %thead
    %tr
      %th State
      %th
      %th
      %th

  %tbody
    - @order_states.each do |order_state|
      %tr
        %td= order_state.state
        %td
          = link_to 'Show', order_state
        %td
          = link_to 'Edit', edit_order_state_path(order_state)
        %td
          = link_to 'Destroy', order_state, :method => :delete, :data => { :confirm => 'Are you sure?' }
= link_to 'New Order state', new_order_state_path
