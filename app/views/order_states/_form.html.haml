= form_for @order_state, html: { class: "form form-horizontal order_state" } do |f|
  - if @order_state.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order_state.errors.count, "error")} prohibited this order_state from being saved:"
      %ul
        - @order_state.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :state, :class => 'control-label col-md-2'
    .controls
      = f.text_field :state, class: 'form-control', required: true
  = f.submit nil, :class => 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), order_states_path, :class => 'btn btn-default'
  = link_to t('.back', :default => t("helpers.links.back")), :back, :class => 'btn btn-default'

