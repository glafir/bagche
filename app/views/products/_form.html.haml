= form_for @product, :html => { :class => 'form-horizontal product' } do |f|
  .form-group
    = f.label :brand_id, :class => 'control-label col-md-2'
    .col-md-10
      = f.select :brand_id, Brand.order(:namebrand).collect{|item| [item.namebrand, item.id]}, {}, :class => 'select form-control', required: true
  .form-group
    = f.label :name, :class => 'control-label col-md-2'
    .col-md-10
      = f.text_field :name, :class => 'text_field form-control', required: true
  .form-group
    = f.label :artcode, :class => 'control-label col-md-2'
    .col-md-10
      = f.text_field :artcode, :class => 'text_field form-control', required: true
  .form-group
    = f.label :quantity, :class => 'control-label col-md-2'
    .col-md-10
      = f.text_field :quantity, :class => 'text_field form-control', required: true
  .form-group
    = f.label :price, :class => 'control-label col-md-2'
    .col-md-10
      = f.text_field :price, :class => 'text_field form-control', required: true
  .form-group
    = f.label :description, :class => 'control-label col-md-2'
    .col-md-10
      = f.text_field :description, :class => 'text_field form-control', required: true
  = f.submit nil, :class => 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), products_path, :class => 'btn btn-default'
  = link_to t('.back', :default => t("helpers.links.back")), :back, :class => 'btn btn-default'

