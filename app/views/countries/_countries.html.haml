= hidden_field_tag :direction, params[:direction]
= hidden_field_tag :sort, params[:sort]

%table.table.table-striped.table-hover.table-condensed
  %thead
    %tr
      %th.active= @model_class.human_attribute_name(:id)
      %th= @model_class.human_attribute_name(:country_name)
      %th= @model_class.human_attribute_name(:country_iata_code)
      %th= @model_class.human_attribute_name(:country_icao_code)
      %th= @model_class.human_attribute_name(:country_number)
      %th= @model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @countries.each do |country|
      %tr
        %td= link_to country.id, country_path(country)
        %td= country.country_name
        %td= country.country_iata_code
        %td= country.country_icao_code
        %td= country.country_number
        %td=l country.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_country_path(country), :class => 'btn btn-warning btn-xs active'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), country_path(country), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger active'
