- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to "Регистрация", new_registration_path(resource_name), class: "btn btn-default"
  %br/
- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
  = link_to "Забыл пароль?", new_password_path(resource_name), class: "btn btn-default"
  %br/
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to "Подтвердить / сменить email?", new_confirmation_path(resource_name), class: "btn btn-default"
  %br/
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to "Не получаешь письма о включении пользователя?", new_unlock_path(resource_name), class: "btn btn-default"
  %br/
