- model_class = User
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize

.column
  %table.table.table-striped.table-hover.table-condensed
    %thead
      %tr
        %th User Avatar
        %th User Login
        %th User Email
        %th Created At
        %th Last LogIn At
        %th User Role
        %th
    = render "users/user"
- if policy(@users).new?
  = link_to "Add new user",  new_user_path, class: "btn btn_default"
